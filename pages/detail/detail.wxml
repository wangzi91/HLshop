<!--pages/detail/detail.wxml-->
<text>pages/detail/detail.wxml</text>
<view>{{title}}</view>
<view><image src='{{image}}'></image></view>
<view>{{price}}</view>
      <text bindtap='reduce' data-index="{{index}}">-</text>
      <text class="input cart-text">{{value}}</text>
      <text bindtap='add' data-index="{{index}}">+</text>
<view><button bindtap="addcart">添加到购物车</button></view>
<view><navigator url="../pay/pay?fid={{id}}&ftitle={{title}}&fimg={{image}}&fprice={{price}}&fvalue={{value}}"><button>立刻购买</button></navigator></view>
<view></view>
