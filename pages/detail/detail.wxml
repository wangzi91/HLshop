<!--pages/detail/detail.wxml-->
<text>pages/detail/detail.wxml</text>
<view>{{title}}</view>
<view>
  <image src='{{image}}'></image>
</view>
<view>价格：{{price}}</view>数量：
<text bindtap='reduce' data-index="{{index}}">-</text>
<text class="input cart-text">{{value}}</text>
<text bindtap='add' data-index="{{index}}">+</text>

<view class='dibu'>
  <view class='left'>
    <text bindtap="addcart" class='text'>添加到购物车</text>
  </view>
  <view class='right'>
    <navigator url="../pay/pay?fid={{id}}&ftitle={{title}}&fimg={{image}}&fprice={{price}}&fvalue={{value}}">
      <text class='text'>立刻购买</text>
    </navigator>
  </view>
</view>